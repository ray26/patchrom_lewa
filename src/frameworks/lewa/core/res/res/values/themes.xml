    </style>

    <!-- Theme for translucent activities (on API level 10 and lower). That is, windows
         that allow you to see through them to the windows behind.  This sets up the translucent
         flag and appropriate animations for your windows.  -->
    <style name="V5.Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- Variant of {@link #Theme_Translucent} with no title bar -->
    <style name="V5.Theme.Translucent.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="V5.Theme.Holo.Light.NoDisplay">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">true</item>
    </style>

    <!-- Default theme for window that looks like a toast. -->
    <style name="V5.Theme.Toast" parent="@*android:style/Theme.Toast">
        <item name="android:windowBackground">@lewa:drawable/toast_frame_holo</item>
    </style>

    <style name="V5.Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="V5.Theme.Holo.Light.CompactMenu">
        <!-- Menu/item attributes -->
        <item name="android:itemTextAppearance">@style/V5.PanelMenu.ListItem.TextAppearance.Holo.Light.Medium</item>
        <item name="android:listViewStyle">@style/V5.Widget.Holo.Light.ListView</item>
        <item name="android:windowAnimationStyle">@*android:style/Animation.DropDownUp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="V5.Theme.Holo.Light.NoTitleBar" >
        <item name="android:windowNoTitle">true</item>
    </style>
