<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PagerHeader">
        <attr name="activeTextColor" format="color" />
        <attr name="inactiveTextColor" format="color" />
        <attr name="tabColor" format="color" />
        <attr name="tabHeight" format="dimension" />
        <attr name="tabPadding" format="dimension" />
        <attr name="paddingPush" format="dimension" />
        <attr name="fadingEdgeLengthX" format="dimension" />
        <attr name="fadingEdgeColorHint" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="showTopShadow" format="boolean" />
        <attr name="showBottomBar" format="boolean" />
        <attr name="showTab" format="boolean" />
        <attr name="android:background" />
        <attr name="indicator_textsize" format="dimension" />
        <attr name="indicator" format="reference" />
        <attr name="indicator_background" format="reference" />
        <attr name="indicator_padding" format="dimension" />
    </declare-styleable>

    <!--BEGIN to move from framework-res for patch rom -->
    <!-- Flag indicating whether this window's Action Bar should overlay
         application content at Bottom. Does nothing if the window would not
         have an Action Bar. add by LeWa Shenqi -->
    <attr name="windowActionBarBottomOverlay" format="boolean" />

    <declare-styleable name="Window">
        <attr name="windowActionBarBottomOverlay" />
    </declare-styleable>

    <!--add by chenhengheng@20121114-->
    <declare-styleable name="LockPatternView">
        <!-- Aspect to use when drawing LockPatternView. Choices are "square"(default), "lock_width"
             or "lock_height" -->
        <attr name="aspect" format="string" />
        <attr name="lockbackground" format="reference"/>
    </declare-styleable>
    <!--END to move from framework-res for patch rom -->

    <declare-styleable name="Switch">
        <!-- Drawable to use as the "track" that the switch thumb slides within when on. -->
        <attr name="trackActive" format="reference" />
        <!-- Drawable to cover whole control. -->
        <attr name="forceground" format="reference" />
    </declare-styleable>

    <declare-styleable name="V5.Theme">
        <attr name="lewa_ui_version" format="integer" />
        <attr name="lewa_windowContentOverlay" format="reference" />
        <attr name="lewa_ActionbarTabIndicatorDrawalbe" format="reference" />
    </declare-styleable>

    <declare-styleable name="SlidingButton">
        <attr name="buttonBarOff" format="reference" />
        <attr name="buttonBarOn" format="reference" />
        <attr name="buttonFrame" format="reference" />
        <attr name="buttonMask" format="reference" />
        <attr name="buttonOffDisable" format="reference" />
        <attr name="buttonOnDisable" format="reference" />
        <attr name="buttonSlider" format="reference" />
        <attr name="buttonSliderPressed" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="V5spinner">
        <attr name="isV5Spinner" format="boolean" />
        <attr name="isHideInputKeyBoard" format="boolean" />
    </declare-styleable>

    <attr name="numberPickerUpButtonStyle" format="reference" />
    <attr name="numberPickerDownButtonStyle" format="reference" />
    <attr name="numberPickerInputTextStyle" format="reference" />
    
    <declare-styleable name="DrawableStates">
        <attr name="state_single" format="boolean" />
        <attr name="state_first" format="boolean" />
        <attr name="state_middle" format="boolean" />
        <attr name="state_last" format="boolean" />
        <attr name="children_sequence_state" format="boolean" />
    </declare-styleable>
</resources>
